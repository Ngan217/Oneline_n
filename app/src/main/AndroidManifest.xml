<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oneline">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_iconmenu"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_iconmenu"
        android:supportsRtl="true"
        android:theme="@style/Theme.OneLine">
        <activity
            android:name=".Level2Activity"
            android:exported="true" />
        <activity
            android:name=".Level1Activity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".ChooseLevelActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".OptionActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>